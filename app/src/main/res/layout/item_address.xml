<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/space_16"
        android:text="黄成实"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:id="@+id/txt_name"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/txt_name"
        android:layout_margin="@dimen/space_10"
        android:text="广东省深圳市宝安区裕安一路尚都花园2e-1002"
        android:id="@+id/txt_address"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_phone"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:text="18680686420"/>

    <View android:layout_height="@dimen/space_1"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_below="@id/txt_address"
        android:id="@+id/view_divide"
        android:background="@color/gray_bg"/>


  <RelativeLayout android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:padding="@dimen/space_10"
      android:layout_below="@+id/view_divide">


      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/img_select"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerVertical="true" />

      <TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/title_select"
          android:textColor="@color/color_unselect"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/space_5"
          android:textSize="@dimen/space_14"
          android:layout_toRightOf="@id/img_select"
          android:text="设为默认地址"/>

      <TextView android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="删除"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:textColor="@color/black"
          android:id="@+id/txt_delete"
          android:textSize="@dimen/space_14"/>

      <TextView android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="编辑"
          android:textColor="@color/black"
          android:layout_centerVertical="true"
          android:id="@+id/txt_edit"
          android:layout_toLeftOf="@+id/txt_delete"
          android:layout_marginRight="@dimen/space_15"
          android:textSize="@dimen/space_14"/>
      </RelativeLayout>
</RelativeLayout>

