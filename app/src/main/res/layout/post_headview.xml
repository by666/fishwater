<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@id/img_head"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_head"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/img_head"
            android:textColor="@color/black"
            android:textSize="@dimen/space_18" />


        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_5"
            android:layout_toRightOf="@+id/img_head"
            android:textSize="@dimen/space_18" />

        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_name" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/gray_bg" />

    <TextView
        android:id="@+id/txt_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:text="asdasd"
        android:textColor="@color/black"
        android:textSize="@dimen/space_20" />


    <TextView
        android:id="@+id/txt_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:text="asdaasdasdasdasdsd"
        android:textSize="@dimen/space_14" />


    <LinearLayout
        android:id="@+id/layout_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:orientation="vertical" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_grant"
        android:paddingTop="@dimen/space_20"
        android:paddingBottom="@dimen/space_20"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_grant"
            android:layout_width="@dimen/space_64"
            android:layout_height="@dimen/space_64"
            android:layout_gravity="center"
            fresco:placeholderImage="@color/collect_price_color"
            fresco:roundAsCircle="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="èµ"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/space_28" />

    </FrameLayout>
</LinearLayout>