<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.facebook.drawee.view.SimpleDraweeView android:layout_width="@dimen/space_64"
        android:layout_height="@dimen/space_64"
        fresco:roundAsCircle="true"
        android:layout_margin="@dimen/space_10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/img_show"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/space_10"
        android:textColor="@color/black"
        android:textSize="@dimen/space_18"
        android:layout_toEndOf="@+id/img_show" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txt_subtitle"
        android:textColor="@color/white"
        android:padding="@dimen/space_2"
        android:layout_toRightOf="@+id/img_show"
        android:background="@color/black"
        android:layout_alignBottom="@+id/img_show"
        />

    <View android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/gray_bg"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>